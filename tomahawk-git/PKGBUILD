##############################################################
#### The section below can be adjusted to suit your needs ####
##############################################################

# What type of build do you want?
# See http://techbase.kde.org/Development/CMake/Addons_for_KDE#Buildtypes to check what is supported.

_buildtype='RelWithDebInfo'

##############################################################

pkgname=tomahawk-git
pkgver=0.5.0.3574.ge5722c9
pkgrel=1
epoch=1
pkgdesc='A Music Player App written in C++/Qt - development version'
arch=('i686' 'x86_64')
url='http://tomahawk-player.org/'
license=('GPL3')
depends=('phonon-qt4' 'taglib' 'boost' 'clucene' 'libechonest' 'jreen' 'quazip' 'attica' 'qtwebkit' 'liblastfm' 'qtkeychain' 'sparsehash')
makedepends=('git' 'cmake')
provides=('tomahawk')
conflicts=('tomahawk')
install=tomahawk.install
source=("${pkgname}::git://github.com/tomahawk-player/tomahawk.git")
md5sums=('SKIP')

if [[ ! ${_buildtype} == 'Release' ]] && [[ ! ${_buildtype} == 'release' ]]; then
  options=('debug')
fi

pkgver() {
  cd ${srcdir}/${pkgname}
  git describe --always --tags | sed 's|-|.|g'
}

build() {
  cd ${srcdir}/${pkgname}
  cmake -DBUILD_WITH_QT4=on \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_INSTALL_LIBDIR=lib \
        -DCMAKE_INSTALL_LIBEXECDIR=lib/tomahawk \
        -DCMAKE_BUILD_TYPE=${_buildtype}
  make
}

package() {
  cd ${srcdir}/${pkgname}
  make DESTDIR=${pkgdir} install
}
